{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenClaw Avatar",
  "version": "0.1.0",
  "identifier": "com.openclaw.avatar",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "初音未来 - OpenClaw Avatar",
        "width": 1024,
        "height": 768,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' ws: wss: https://api.fish.audio"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Entertainment",
    "shortDescription": "初音未来的数字人身体",
    "longDescription": "OpenClaw Avatar 是一个基于 Live2D 的数字人系统，让初音未来拥有可视化的身体，能够实时表达情感、进行语音对话。",
    "copyright": "© 2026 OpenClaw",
    "publisher": "OpenClaw",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "frameworks": [],
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "section": "misc",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
